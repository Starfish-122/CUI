{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/app/*": ["src/app/*"],
            "@/styles/*": ["src/styles/*"],
            "@/lib/*": ["src/lib/*"],
            "@/utils/*": ["src/utils/*"],
            "@/hooks/*": ["src/hooks/*"],
            "@/context/*": ["src/context/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "src"
    ],
    "exclude": ["node_modules"]
}
